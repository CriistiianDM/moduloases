{{#data}}

<body>
    <div id="form-info" data-id="{{#form_info}} {{id}} {{/form_info}}" data-alias="{{#form_info}} {{alias}} {{/form_info}}" style="display:none;"></div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 form-group">
                <h2>[ {{#form_info}} {{nombre}} {{/form_info}} ] Gestión de formulario</h2>
                <hr>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul>
                        <li><strong>Id: </strong>{{#form_info}} {{id}} {{/form_info}}</li>
                        <li><strong>Nombre: </strong>{{#form_info}} {{nombre}} {{/form_info}}</li>
                        <li><strong>Alias: </strong>{{#form_info}} {{alias}} {{/form_info}}</li>
                        <li><strong>Descripción: </strong>{{#form_info}} {{descripcion}} {{/form_info}}</li>
                        <li><strong>Método de envio: </strong>{{#form_info}} {{method}} {{/form_info}}</li>
                        <li><strong>Archivo que recibe: </strong>{{#form_info}} {{action}} {{/form_info}}</li>
                        <li><strong>Codificación: </strong>{{#form_info}} {{enctype}} {{/form_info}}</li>
                    </ul>
                    <hr>
                </div>
                <a id="dphpforms-redirect-adm-forms" href="javascript:void(0)" class="btn btn-sm btn-default">Administrar formularios</a>
                <a id="dphpforms-redirect-adm-alias" href="javascript:void(0)" class="btn btn-sm btn-default">Administrar alias de preguntas</a>
                <a id="dphpforms-redirect-adm-disparadores" href="javascript:void(0)" class="btn btn-sm btn-default" data-form-id="{{form_id}}">Administrar disparadores</a>
                <a id="dphpforms-redirect-new-pregu" href="javascript:void(0)" class="btn btn-sm btn-default" data-form-id="{{form_id}}">+ Nueva pregunta</a>
                <hr>
                    <h2>Mantenimiento</h2>
                <hr>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        <select class="form-control" name="" id="alias-list">
                                <option value="" data-id="-1" selected="selected" disabled hidden>Seleccione la pregutna</option>
                        {{#preguntas_form_v2}}
                            <option value="" data-id="{{#atributos_campo}}{{id_pregunta}}{{/atributos_campo}}">{{#atributos_campo}}{{local_alias}}{{/atributos_campo}}</option>
                        {{/preguntas_form_v2}}
                        </select>
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        <select class="form-control" name="" id="" disabled>
                            <option value="" data-id="-1" disabled hidden>Seleccione la acción</option>
                            <option value="" data-action-id="1" selected="selected" title="Registra respuestas vacías en los registros previos para la pregunta seleccionada">Resolver huerfanos</option>
                        </select>
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        <input type="text" name="" id="mantenimiento-valor-por-defecto" class="form-control" placeholder="Valor por defecto">
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        <a id="cargar-afectaciones" href="javascript:void(0)" class="btn btn-danger btn-sm btn-dphpforms btn-dphpforms-univalle" title="Carga los registros que se verán afectados por la acción">Ver resgistros</a>
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        <input type="checkbox" id="verificacion" name="verificacion">
                        <label for="verificacion">Verificación</label>
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        <a id="aplicar-accion" href="javascript:void(0)" class="btn btn-danger btn-sm btn-dphpforms btn-dphpforms-univalle" style="display:none;">Aplicar acción</a>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                        <textarea id="salida-afectaciones" class="form-control" rows="10"></textarea>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <hr>
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <h2>Gestión de preguntas</h2>
                <hr>
                <div class="peer_trackings_v2" id="peer_trackings_v2" name="peer_trackings_v2">
                    <div id="accordion_v2">
                        <div class="card card_v2">
                            <div class="card-header card-header_v2" role="tab" id="headingOnePregunta">
                                <h5 class="mb-0">
                                    <a data-toggle="collapse" class="btn btn-danger btn-univalle btn-card" data-container="collapseOnePregunta" data-parent="#accordion_v2"
                                        href="#collapseOnePregunta" aria-expanded="true" aria-controls="collapseOne">
                                        Preguntas del formulario
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                    </a>
                                </h5>
                            </div>

                            <div id="collapseOnePregunta" class="collapse show collapse_v2" role="tabpanel" aria-labelledby="headingOnePregunta">
                                <br>
                                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                    <strong>#ID</strong>
                                </div>
                                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                    <strong>Enunciado</strong>
                                </div>
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
                                    <strong>Campo</strong>
                                </div>
                                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                    <strong>Posición</strong>
                                </div>
                                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                    <strong>Opciones</strong>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <hr>
                                </div>

                                {{#preguntas_form}}

                                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">{{id_pregunta}}</div>
                                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">{{enunciado}}</div>
                                <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">{{campo}}</div>
                                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">{{posicion}}</div>
                                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">.
                                    <span data-pregunta-id="{{id_pregunta}}" class="btn-editor-pregunta btn btn-default btn-xs glyphicon glyphicon-pencil"></span>
                                    <!--<span data-pregunta-id="{{id}}" class="btn-remove-pregunta btn btn-danger btn-xs glyphicon glyphicon-remove"></span>-->
                                </div>
                                {{^last}}
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <hr>
                                </div>
                                {{/last}} {{/preguntas_form}}

                            </div>
                        </div>
                    </div>
                </div>

                <hr>

                <div class="peer_trackings_v2" id="peer_trackings_v2" name="peer_trackings_v2">
                    <div id="accordion_v2">
                        <div class="card card_v2">
                            <div class="card-header card-header_v2" role="tab" id="headingOnePermiso">
                                <h5 class="mb-0">
                                    <a data-toggle="collapse" class="btn btn-danger btn-univalle btn-card" data-container="collapseOnePermiso" data-parent="#accordion_v2"
                                        href="#collapseOnePermiso" aria-expanded="true" aria-controls="collapseOne">
                                        Permisos del formulario
                                        <span class="glyphicon glyphicon-chevron-left"></span>
                                    </a>
                                </h5>
                            </div>

                            <div id="collapseOnePermiso" class="collapse show collapse_v2" role="tabpanel" aria-labelledby="headingOnePermiso">
                                <br>
                                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                    <strong>#ID</strong>
                                </div>
                                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                    <strong>Enunciado</strong>
                                </div>
                                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
                                    <strong>Campo</strong>
                                </div>
                                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                    <strong>Opciones</strong>
                                </div>
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <hr>
                                </div>
                
                                {{#preguntas_permissions}}
                
                                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">{{id_permiso}}</div>
                                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">{{enunciado}}</div>
                                <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">{{campo}}</div>
                                <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                                    <span data-permiso-id="{{id_permiso}}" class="btn-editor-permiso btn btn-default btn-xs glyphicon glyphicon-pencil"></span>
                                    <!--<span data-permiso-id="{{id_permiso}}" class="btn-remove-permiso btn btn-danger btn-xs glyphicon glyphicon-remove"></span>-->
                                </div>
                                {{^last}}
                                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                    <hr>
                                </div>
                                {{/last}} {{/preguntas_permissions}}

                            </div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <h2>Actualizador de posiciones</h2>
                    <hr>
                    <div class="form-group">
                        <textarea id="ordenamiento" class="form-control" rows="9">{{{json_ordenamiento}}}</textarea>
                    </div>
                    <div class="form-group">
                        <a id="actualizar-orden" href="javascript:void(0)" class="btn btn-danger btn-sm btn-dphpforms btn-dphpforms-univalle" data-form-id="{{form_id}}">Actualizar orden</a>
                    </div>
                </div>
                

            </div>
        </div>
    </div>
</body>
{{/data}}